<script>
    var optionsContainer = document.getElementById("optionsContainer");
    //var firstContainer = document.getElementById("first-container");
    var optionsTag = document.querySelectorAll('.option');

    function toggleDropdown() {

        if (optionsContainer.style.display === "block") {
            optionsContainer.style.display = "none";
            //firstContainer.style.visibility = "visible";
        } else {
            optionsContainer.style.display = "block";
            //firstContainer.style.visibility = "hidden";
        }
    }

    // Add event listeners to each option
    document.querySelectorAll('.option').forEach(item => {
        item.addEventListener('click', event => {
            var selectedOptionText = event.target.textContent;
            var selectedOptionContainer = document.querySelector('.selected-option');
            selectedOptionContainer.value = selectedOptionText;
        });

        toggleDropdown();
    });

    function filterOptions() {

        var count = 0;

        optionsContainer.style.display = "block";
        var input, filter, options, option, i, txtValue;
        input = document.getElementById("searchInput");
        filter = input.value.toUpperCase();
        options = document.getElementsByClassName("option");

        for (i = 0; i < options.length; i++) {
            option = options[i];
            txtValue = option.textContent || option.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                option.style.display = "";
                count++;
            } else {
                option.style.display = "none";
            }
        }

        if (count <= 3) {
            optionsTag.forEach(function (option) {
                option.style.width = "179px";
            });
        }
        else {
            optionsTag.forEach(function (option) {
                option.style.width = "161px";
            });
        }
    }

    document.getElementById("searchInput").addEventListener("input", filterOptions);

    const uploadForm = document.getElementById("uploadForm");
    const fileInput = document.getElementById("fileInput");
    const selectedFile = document.getElementById("selectedFile");
    const progressContainer = document.getElementById("progressContainer");
    const progressIndicator = document.getElementById("progressIndicator");
    const progressText = document.getElementById("progressText");
    const fileError = document.getElementById("fileError");
    const responseInfo = document.getElementById("response-info");


    var apiResponse = "";
    var pdfFilename = "";

    fileInput.addEventListener("change", function () {

        if (fileInput.files.length > 0) {
            var fileName = fileInput.files[0].name;
            pdfFilename = fileName;
            console.log(pdfFilename);
            selectedFile.title = fileName;

            var ext = fileName.slice((Math.max(0, fileName.lastIndexOf(".")) || Infinity) + 1);

            if (fileInput.files[0].name.length > 8) {
                var longFileName = fileInput.files[0].name.slice(0, 8);
                longFileName = longFileName + "...." + ext;
                //selectedFile.textContent = "Selected file: " + longFileName;
                selectedFile.textContent = longFileName;
            }
            else
                selectedFile.textContent = fileName;
        } else {
            selectedFile.textContent = "No file selected";
        }
    });

    uploadForm.addEventListener("submit", function (event) {

        // Prevent the default form submission behavior
        event.preventDefault();
        if (fileInput.files.length === 0) {
            // Show an error message in the popup
            fileError.textContent = "Please select a file!";
            return;
        }
        fileError.textContent = "";
        progressText.textContent = "Uploading...";
        // Show the progress bar container
        progressIndicator.style.width = "0%";
        progressContainer.style.display = "block";
        let progress = 0;
        var interval = "";
        responseInfo.innerHTML = ""
        const formData = new FormData();
        formData.append("pdfFile", fileInput.files[0]);

        $.ajax({

            url: "/Home/UploadFileToBlobStorage",
            type: "POST",
            processData: false,
            contentType: false,
            data: formData,
            beforeSend: function () {
                interval = setInterval(function () {
                    progress += 5;
                    if (progress <= 98) {
                        progressIndicator.style.width = progress + "%";
                        progressText.textContent = "Uploading: " + progress + "%";
                    } else {
                        clearInterval(interval);
                        progressText.textContent = "Processing... Wait for sometime";
                    }
                }, 1000);
            },
            success: function (response) {

                apiResponse = response;
                console.log(response);

                if (response.includes("There is some technical issue while uploading to blob.")) {
                    progressText.textContent = "There was a problem uploading the file. Try again";
                    clearInterval(interval);
                }
                else if (response.includes("There is some technical issue during function app call.")) {
                    progressText.textContent = "Oops, something went wrong. Try again";
                    clearInterval(interval);
                }
                else {
                    clearInterval(interval);
                    progressIndicator.style.width = "100%";
                    progressText.textContent = "Upload complete!";
                    responseInfo.innerHTML = response;

                    setTimeout(function () {
                        fileInput.value = "";
                        selectedFile.textContent = "No file selected";
                        progressContainer.style.display = "none";
                        progressText.textContent = "";
                    }, 10000);
                }
            },
            error: function (response) {
                progressText.textContent = "System exception";
                clearInterval(interval);
            },
        });
    });

</script>